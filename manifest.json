{
  "manifest_version": 2,
  "version": "0.01",
  "name": "LeadForce",
  "short_name": "LeadForce",
  "description": "Extract LinkedIn data straight into your CRM",
  "minimum_chrome_version": "20",
  "icons": { "16": "icons/icon16.png",
             "48": "icons/icon48.png",
             "128": "icons/icon128.png" },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Extract LinkedIn data straight into your CRM"
  },
  "permissions": [
    "storage",
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://use.fontawesome.com/",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [{
      "js": ["js/jquery-3.3.1.min.js", "js/bootstrap.min.js", "contentscript.js"],
      "css": ["css/bootstrap.min.css"],
      "matches": ["*://*.linkedin.com/in/*", "*://*.linkedin.com/sales/people/*"],
      "all_frames": false
  }],
  "web_accessible_resources": [
      "js/jquery-3.3.1.min.js",
      "css/bootstrap.min.css",
      "js/bootstrap.min.js",
      "contentscript.js",
      "https://use.fontawesome.com/releases/v5.1.0/css/all.css"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
